{
    "res_defs": {
        "type": "list",
        "schema": {
            "anyof": [
                {
                    "type": "dict",
                    "schema": {
                        "role": {
                            "type": "string",
                            "required": true,
                            "allowed": [
                                "azure_vm"
                            ]
                        },
                        "name": {
                            "type": "string",
                            "required": true
                        },
                        "flavor": {
                            "type": "string",
                            "required": true
                        },
                        "region": {
                            "type": "string",
                            "required": false
                        },
                        "image": {
                            "type": "string",
                            "required": false
                        },
                        "count": {
                            "type": "integer",
                            "required": false
                        },
                        "keypair": {
                            "type": "string",
                            "required": false
                        },
                        "security_group": {
                            "type": [
                                "list",
                                "string"
                            ],
                            "required": false
                        },
                        "vpc_subnet_id": {
                            "type": "string",
                            "required": false
                        },
                        "assign_public_ip": {
                            "type": "boolean",
                            "required": false
                        },
                        "instance_tags": {
                            "type": "dict",
                            "required": false
                        },
                        "wait_timeout": {
                            "type": "integer",
                            "required": false
                        }
                    }
                }
            ]
        }
    }
}